<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vistas.login">
   <children>
      <ImageView fitHeight="349.0" fitWidth="600.0" layoutY="60.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../BDfondos/Login.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="idUser" layoutX="353.0" layoutY="108.0" onAction="#ButtonLogin" opacity="0.89" promptText="Ingrese su usuario" style="-fx-background-radius: 50; -fx-background-color: #A4C3F4;">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </TextField>
      <PasswordField fx:id="idPass" layoutX="353.0" layoutY="161.0" onAction="#ButtonLogin" opacity="0.89" promptText="Ingrese su contraseña" style="-fx-background-radius: 50; -fx-background-color: #A4C3F4;">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnLogin" layoutX="353.0" layoutY="224.0" mnemonicParsing="false" onAction="#ButtonLogin" prefHeight="33.0" prefWidth="226.0" style="-fx-background-radius: 10; -fx-background-color: #345287;" text="Ingresar" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnSignUp" layoutX="351.0" layoutY="276.0" mnemonicParsing="false" onAction="#handlerVistaSignUp" prefHeight="33.0" prefWidth="226.0" style="-fx-background-radius: 10; -fx-background-color: #345287;" text="Registrarse" textFill="WHITE" visible="false">
