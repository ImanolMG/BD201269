            <Font name="Arial Bold" size="18.0" />
         </font></Button>
      <Label layoutX="365.0" layoutY="141.0" text="Contraseña">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="365.0" layoutY="87.0" text="Nombre de usuario">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="359.0" text="Iniciar Sesion">
         <font>
            <Font name="Arial Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="8.0" text="Veterinaria" textFill="#edce85">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
   </children>
